<%= content_for :edit_profile do %>

    <% if current_user?(@user) %>

        <%= content_tag :span, link_to('(Edit)', edit_user_path(@user), class:'text-warning text-sm') %>

    <% end %>

<% end %>

<%= profile_image_for(@user) %>

<h4 class="font-thin m-t-xl">Recent items:</h4>

<ul class="nav nav-tabs">

  <li class="h5 active font-thin">

    <%= link_to '#user-storybooks', data: { toggle:'tab' } do %>

        Storybooks

        <%= content_tag :span, "#{@storybooks.size}", class:'badge' %>

    <% end %>

  </li>

  <li class="h5 font-thin">

    <%= link_to '#user-stories', data: { toggle:'tab' } do %>

        Stories

        <%= content_tag :span, "#{@stories.size}", class:'badge' %>

    <% end %>

  </li>

  <li class="h5 font-thin">

    <%= link_to '#user-relatives', data: { toggle:'tab' } do %>

        Family

        <%= content_tag :span, "#{@relatives.size}", class:'badge' %>

    <% end %>

  </li>

  <li class="h5 font-thin">

    <%= link_to '#user-activities', data: { toggle:'tab' } do %>

        Activity

        <%= content_tag :span, "#{@activities.size}", class:'badge' %>

    <% end %>

  </li>

</ul>

<div class="tab-content">

  <%= render partial: 'user_storybooks' %>

  <%= render partial: 'user_stories' %>

  <%= render partial: 'user_relationships' %>

  <%= render partial: 'user_activities' %>

</div>

<%= content_tag :div, nil, id: 'story-modal', class: 'modal fade', tabindex: -1, role: 'dialog' %>

