<li class="list-group-item row">

  <div class="col-lg-1">

    <%= profile_image_for(item, size:25) %>

  </div>

  <div class="col-lg-3">

    <%= item.name %>

  </div>

  <div class="col-lg-6">

    Relative since <%= time_ago_in_words(@user.relative_since(item)) %> ago

  </div>

  <div class="col-lg-2">

    <%= link_to 'Remove relative', relationship_path(item), method: :delete, class:'text-warning', data: { confirm: 'you want to remove this relative?' } %>

  </div>

</li>