<% if @stories.empty? %>

    <%= render partial: 'shared/nothing_to_render', locals: { item: 'story' } %>

<% else %>

    <ul class="list-group m-t-lg">

        <% @stories.each do |story| %>

           <%= render story %>

        <% end %>

        <%= paginate @stories %>

    </ul>

<% end %>
