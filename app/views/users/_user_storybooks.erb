<div class="tab-pane fade active in" id="user-storybooks">

  <ul class="list-group">

    <% if @storybooks.any? %>

        <% @storybooks.each do |storybook| %>

            <%= content_tag :li, link_to(storybook.title, storybook_path(storybook)), class:'list-group-item' %>

        <% end %>

     <% else %>

        <%= render partial: 'shared/nothing_to_render', locals: { item: 'storybook' } %>

     <% end %>

  </ul>

</div>