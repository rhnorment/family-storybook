<% if @activities.empty? %>

    <%= render partial: 'shared/nothing_to_render_alert', locals: { item: 'activity' } %>

<% else %>

    <ul class="list-group">

        <%= render_activity(@activities) %>

    </ul>

    <%= paginate @activities %>

    <%= content_tag :div, nil, id: 'story-modal', class: 'modal fade', tabindex: -1, role: 'dialog' %>

<% end %>
