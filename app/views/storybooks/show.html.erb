<%= content_for :sub_nav_content do %>

    <%= content_tag :li, link_to('Edit this storybook', edit_storybook_path(@storybook), class:'navbar-link')%>

<% end %>

<div class="well">

    <div class="row">

      <div class="col-lg-2">

        <%= cl_image_tag image_for(@storybook), size: '156x206', class:'img-responsive' %>

      </div>

      <div class="col-lg-10">

        <%= content_tag :h4, "by #{@storybook.user.name}", class:'font-thin' %>

        <%= content_tag :p, sanitize(@storybook.description), class:'lead' %>

      </div>

    </div>

</div>


