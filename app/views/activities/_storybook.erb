<li class="list-group-item row">

  <div class="col-lg-1">

    <%= icon 'book', nil, class:'text-primary fa-2x' %>

  </div>

  <div class="col-lg-8">

    <%= activity.owner.name %> created storybook

    <%= content_tag :span, link_to(activity.trackable.title, storybook_path(activity.trackable)) %>

  </div>

  <div class="col-lg-3">

    <%= content_tag :small, "#{time_ago_in_words(activity.created_at)} ago", class:'text-muted' %>

  </div>

</li>