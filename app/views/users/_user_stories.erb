<div class="tab-pane fade in" id="user-stories">

  <ul class="list-group">

    <% if @stories.any? %>

        <% @stories.each do |story| %>

            <%= render story %>

        <% end %>

        <%= content_tag :p, (link_to 'Vew all stories', stories_path), class:'lead m-t-lg' %>

    <% else %>

        <%= render partial: 'shared/nothing_to_render', locals: { item: 'story' } %>

    <% end %>

  </ul>

</div>