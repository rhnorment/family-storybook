<%= form_tag session_path, class:'form-horizontal form-signin' do %>

    <fieldset>

      <legend>Sign in to FamilyShare</legend>

      <div class="form-group">
        <%= label_tag :email, nil, class:'col-lg-3 control-label' %>
        <div class="col-lg-9">
          <%= email_field_tag :email, nil, class:'form-control', autofocus:true %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :password, nil, class:'col-lg-3 control-label' %>
        <div class="col-lg-9">
          <%= password_field_tag :password, nil, class:'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-9 col-lg-offset-3">
          <%= submit_tag 'Sign in', class:'btn btn-primary' %> or
          <%= link_to 'Cancel', root_path %>
        </div>
      </div>

    </fieldset>

    <p class="text-center">
      Not a member yet?  <%= link_to 'Sign up here', signup_path %>
    </p>

<% end %>