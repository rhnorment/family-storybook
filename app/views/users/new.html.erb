<%= bootstrap_form_for @user, html: { class:'form-signup'},
                       layout: :horizontal, label_col:'col-lg-3', control_col:'col-lg-9' do |f| %>

    <fieldset>

      <legend>Register for FamilyBook</legend>

      <% if @token %>
          <%= hidden_field_tag :invitation_token, @token %>
      <% end %>

      <%= f.text_field  :name, autofocus:true %>

      <%= f.email_field :email %>

      <%= f.password_field :password %>

      <%= f.password_field :password_confirmation, label:'Confirm password' %>

      <%= f.form_group do %>
          <%= f.primary 'Register' %> or
          <%= link_to 'Cancel', root_path %>
      <% end %>

    </fieldset>

    <p class="text-center">
      Already a member?  <%= link_to 'Sign in here', signin_path %>
    </p>

<% end %>


