<%= bootstrap_form_for @user, html: { class:'form-user-edit' } do |f| %>

   <%= f.text_field :name, label_class:'text-warning', autofocus:true %>

   <%= f.email_field :email, label_class:'text-warning' %>

   <%= f.password_field :password %>

   <%= f.password_field :password_confirmation %>

   <%= f.form_group do %>
          <%= f.primary 'Update' %> or
          <%= link_to 'Cancel', @user %>
   <% end %>

<% end %>

<p>
  <%= link_to 'Deactivate my account', @user, method: :delete, class:'text-danger', data: { confirm: 'You want to deactivate your account?' } %>
</p>





