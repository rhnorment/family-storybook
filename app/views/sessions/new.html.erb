<%= bootstrap_form_tag url: session_path, html: { class:'form-signin'},
                       layout: :horizontal, label_col:'col-lg-3', control_col:'col-lg-9' do |f| %>

    <fieldset>

      <legend>Sign in to FamilyBook</legend>

      <%= f.email_field :email %>

      <%= f.password_field :password %>

      <%= f.form_group do %>
          <%= f.primary 'Sign in' %> or
          <%= link_to 'Cancel', root_path %>
      <% end %>

    </fieldset>

    <p class="text-center">
       <%= link_to 'Forgot your password?', new_password_reset_path %>
    </p>

    <p class="text-center">
      Not a member yet?  <%= link_to 'Sign up here', signup_path %>
    </p>

<% end %>