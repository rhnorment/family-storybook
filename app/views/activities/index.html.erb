<% if @activities.empty? %>

    <%= render partial: 'shared/nothing_to_render', locals: { item: 'activity' } %>

<% else %>

    <ul class="list-group">
        <% @activities.each do |activity| %>

           <%= render_each(activity) %>

      <% end %>
    </ul>

    <%= paginate @activities %>

    <%= content_tag :div, nil, id: 'story-modal', class: 'modal fade', tabindex: -1, role: 'dialog' %>

<% end %>
