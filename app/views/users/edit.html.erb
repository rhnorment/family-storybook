<h3 class='text-info font-thin'>
  <%= @page_title %>
  <% if current_user?(@user) %>
      <%= content_tag :span, link_to('Delete account', @user, method: :delete, class:'text-sm text-danger', data: { confirm: 'Are you sure?' }) %>
  <% end %>
</h3>

<div class="row">

  <div class="col-lg-6 col-md-6 col-sm-12">

    <%= form_for @user, html: { class:'form-user-edit' } do |f| %>

        <div class="form-group">
          <%= f.label :name, class:'control-label text-warning' %>
          <%= f.text_field :name, class:'form-control', autofocus:true %>
        </div>

        <div class="form-group">
          <%= f.label :email, class:'control-label text-warning' %>
          <%= f.email_field :email, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :pasword, class:'control-label text-warning' %>
          <%= f.password_field :password, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirm password', class:'control-label text-warning' %>
          <%= f.text_field :password_confirmation, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Update', class:'btn btn-primary' %> or
          <%= link_to 'Cancel', @user %>
        </div>

    <% end %>

  </div>

</div>

